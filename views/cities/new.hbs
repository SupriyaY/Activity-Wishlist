<div class="task">
    <a href="/users">Home</a> /
    <a href="/users/{{userId}}">Profile</a> /
    <a href="/users/{{userId}}/cities">Cities</a> / New City
</div>

<div class="card">

    <h2>Add A New City:</h2>
    <div>
        <form action="/users/{{userId}}/cities" method="POST">
            <div class="form-input">
                <label for="city_name">City Name:</label>
                <input type="text" name="city_name" required>
            </div>

            <div class="button-container flex-end">
                <input class="button main" type="submit" value="Add City">
                <a href="/users/{{user._id}}" class="button warning">Cancel</a>
            </div>
        </form>
    </div>
</div>